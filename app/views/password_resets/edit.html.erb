<div class="signup-container form">
	<h1 style="margin-top:0;">Forgot Password</h1>
<%= form_for @user, url: password_reset_path(params[:id]), :html => {id: 'signup-form'} do |f| %>
	
	<%if @user.errors.any?%>
		<ul>
		<% @user.errors.full_messages.each do |msg|%>
			<li><%= msg %></li>
		<%end%>
		</ul>
	<%end%>

	<%=hidden_field_tag :email, @user.email %>

	<%= f.label :password%>
	<%= f.password_field :password, required: true, placeholder: "Password", minlength: "8"%>

	<%= f.label :password_confirmation%>
	<%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirmation", minlength: "8"%>

	<%=f.submit "Update password", id: "submit-btn"%>
<%end%>

</div>