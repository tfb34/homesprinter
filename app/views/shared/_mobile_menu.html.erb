<div id="mobile-menu">
	<div style="text-align: center;margin-top:0.8em">

		<%= link_to root_url do%>
			<%=image_tag 'logo.svg', :class =>"logo"%>
		<%end%>

		<%if current_user%>
			<div id="user-info">
				<ul>
					<li><%=gravatar_for(current_user,size: 15)%>
				        <%=link_to current_user.email, edit_user_path(current_user), id:""%>
                    </li>
				    <li><%=link_to "Saved Homes", likes_path%></li>
				</ul>
			</div>
		<%end%>

        <div id="general">
            <ul>
            <li><%=form_tag(homes_path, method: "get") do%>
                
                <%=hidden_field_tag 'listingType', 'buy'%>
                <%=hidden_field_tag 'filterText', 'Jersey City'%>
                <%=submit_tag("Buy")%>
            
            <%end%></li>

            <li><%=form_tag(homes_path, method: "get") do%>
            
                <%=hidden_field_tag 'listingType', 'rent'%>
                <%=hidden_field_tag 'filterText', 'Jersey City'%>
                <%=submit_tag("Rent")%>
            <%end%></li>

            <li style="padding-left: 5px;"><%= link_to "About", about_path%></li>
            </ul>
        </div>
	</div>
	<%if(current_user)%>
		<%=button_to 'Logout', logout_url, method: :delete%>
	<%else%>
		<%=button_to 'Sign up/Sign in', signup_path, method: :get%>
	<%end%>


</div>

