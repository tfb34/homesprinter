:root{
  --main-color:rgba(38,199,132,1);
  --bg-color:#E5E5E5;
  --light-grey-color: rgba(229,229,229,1);
  --grey-color: rgba(139,139,139,1);
  --dark-color: rgba(78,74,74,1);
  --menu-color:rgba(98,99,121,1);
}
body{
  font-family: 'Open Sans', sans-serif;
}
#bg{
  position: absolute;
  top:0;
  z-index:-1;
  width:100%;
  height:100vh;
  background-image: url(<%= asset_path 'homepage_bg.jpg'%>);
  background-size: cover;
  background-position: center;
}
.myContainer{
  position: relative;
}
.logo{
  position: absolute;
  height:36px;
  width:72px;
  top:0;
  left:1em;
  bottom:0;
  margin:auto;
}
.navbar{
  position: relative;
  height:60px;
  width:100%;
  background-color: var(--main-color);
}
#menu-btn{
  position: absolute;
  height:15px;
  width:25px;
  top:1.5em;
  right:1em;
  z-index:10001;
  /*background-color:rgba(3,4,5,0.5);*/
}
#menu-btn span{
  height:2px;
  width:100%;
  margin-bottom:5px;
  background-color:white;
  display: block;
  border-radius:2px;
  transition: 0.4s;
}
.change .bar1{
  -webkit-transform: translateY(6px) rotate(45deg);
  transform: translateY(6px) rotate(45deg);
}
.change .bar2{
  opacity:0;
}
.change .bar3{
  -webkit-transform: translateY(-8px) rotate(-45deg);
  transform: translateY(-8px) rotate(-45deg);
}
#welcome-content{
  position: relative;
  margin-top:25vh;
}
#welcome-content h1{
  color:white;
  text-align: center;
}
#welcome-content > form >input[name]{
  height:50px;
  width: 100%;
  box-sizing: border-box;
  padding-left: 1em;
  border:none;
  border-radius: 2px;
}
#welcome-content > form{
  position: relative;
  width:90%;
  margin: 0 auto;
}
#welcome-content > form > #search-icon{
  position: absolute;
  height:16px;
  width:16px;
  border-radius:2px;
  background-color: var(--main-color);
  padding:0.5em;
  top:0;
  right:0.5em;
  bottom:0;
  margin:auto;
}
#search-menu{
  width:70%;
  margin:0 auto;
  color:white;
  background-color: rgba(0,0,0,0.8);
}
#search-menu span{
  display: inline-block;
  width:32%;
  padding:0.5em 0;
  text-align: center;
}
#search-menu .current{
  background-color: var(--main-color);
}
#search-menu span:first-child{
  border-top-left-radius: 2px;
}
#search-menu span:last-child{
  border-top-right-radius: 2px;
}
#edit-profile h1{
  margin-bottom:0;
  font-weight: 300;
  color:var(--dark-color);
}
#edit-profile .subheader{
  margin-top:0.5em;
  color: var(--grey-color);
}
.bgcolor{
  background-color:blue;
}
section{
  padding:1em;
}
.line{
  width:100%;
  height:0.5px;
  background-color: var(--grey-color);
  display: block;
}
.picture{
  position: relative;
  height:161px;
  width:164px;
  border:2px dashed var(--grey-color);
  text-align: center;
  margin:0 auto;
  box-sizing: border-box;
  margin-top:1.5em;
}
.picture div{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  height:60%;
}
.picture img{
  height:61px;
  width:61px;
  margin:0 auto;
}
.picture a{
  display: block;
  text-decoration: none;
  font-weight: bold;
  margin-top:1em;
  color:var(--main-color);
}
.signup-container{
  background-color:white;
  width:100%;
  height:100vh;
  text-align: center;
  box-sizing: border-box;
  padding:1em;
}
.signup-container input{
  width:100%;
  box-sizing: border-box;
  padding:0.8em 1em;
  margin-bottom: 1em;
  background-color:var(--light-grey-color);
  color:grey;
  border:none;
  border-radius: 2px;
}
.signup-container #submit-btn{
  border:none;
  background-color:red;
  color:white;
  font-weight: bold;
}
#mobile-menu{
  position: fixed;
  top:0;
  z-index: -1;
  width:100%;
  height:100vh;
  background-color: var(--menu-color);
  color:white;
  transition: 0.2s;
  /*transform:scale(0,0);
  transform-origin: right top;*/
  opacity: 0;
  /*border-bottom-left-radius: 100%;*/
}
.show{
  /*display: block !important;*/
  /*transform: scale(1,1) !important;
  border-radius: 0!important;*/
  opacity:1 !important;
  z-index:1000 !important;
}
#letter-x{
  height:14px;width:14px;
  position: fixed;
  top:0.8em;
  right:0.8em;
  border:0.5px solid white;
  padding:0.5em;
  border-radius:20%;
}
#mobile-menu .logo{
  position: relative;
  left:0;
}
#mobile-menu .button_to input{
  background-color: rgb(58,59,75);
  height:80px;
  width:100%;
  border:none;
  position: fixed;
  bottom:0;
  color:white;
}
#mobile-menu button a {
  color:white;
  text-decoration: none;
}
#user-info a{
  color:white;
  text-decoration: none;
}
.checkbox{
  text-align: left;
  display:block;
  margin-bottom:10px;
}
.checkbox > input{
  width:auto;
}
.signup-container.form #submit-btn{
  background-color: var(--main-color);
}
.signup-container.form label{
  display: block;
 
 text-align: left;
 margin-bottom:0.5em;
 font-size: 16px;
 font-weight: bold;
}
.signup-container.form input{
  margin-bottom:2em;
}
.signup-container.form{
  margin-top:4em;
}
.alert{
  width:90vw;
  position:relative;
  border-radius:5px;
  margin:0 auto;
  margin-top:0.5em;
}
.alert p{
 padding:0.5em 0 0.5em 1em;
 font-size:14px;
}
.alert-info{
  background-color: #d3eef9;
  color:#44719d;
  border:1px solid #aceaf3;
}

.alert-success{
  background-color: #daf1d9;
  color:#757743;
  border:1px solid #d1eac7;
}
.alert-warning{
  background-color: #fff9e3;
  color:#906b3c;
  border:1px solid #ffebcb;
}
.alert-danger{
  background-color: #f8dddd;
  color:#b93e3d;
  border:1px solid #f3cacf;
}
